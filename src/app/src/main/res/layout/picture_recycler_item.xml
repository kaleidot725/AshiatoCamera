<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:myApplication="http://schemas.android.com/apk/res-auto">

        <data>
                <variable name="vm" type="kaleidot725.highestpeaks.main.history.PictureViewModel"/>
        </data>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="2dp"
                android:elevation="4dp"
                android:background="@android:color/white">

                <ImageView
                        android:id="@+id/picture_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        myApplication:imageUrl="@{vm.path}"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:onClick="@{vm::preview}"
                        android:background="?android:attr/selectableItemBackground"/>
        </FrameLayout>
</layout>
