<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".main.camera.CameraFragment">

    <data>
        <variable name="viewModel" type="kaleidot725.highestpeaks.main.camera.CameraViewModel"/>
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.camerakit.CameraKitView
                android:id="@+id/camera_kit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:adjustViewBounds="true"
                android:keepScreenOn="true"
                app:camera_facing="back"
                app:camera_focus="continuous"
                app:camera_permissions="camera"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/rotate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="bottom|left"
                android:layout_margin="16dp"
                android:onClick="@{viewModel::toggleFacing}"
                android:src="@drawable/ic_rotate"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/shot_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:layout_gravity="bottom|center_horizontal"
                android:onClick="@{viewModel::clickCapture}"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/flush_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="bottom|right"
                android:layout_margin="16dp"
                android:onClick="@{viewModel::toggleFlash}"
                android:src="@drawable/ic_flush"/>
    </FrameLayout>
</layout>